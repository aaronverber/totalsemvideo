<% content_for :head do %>
<%= javascript_include_tag params[:controller] %> 
<%= stylesheet_link_tag params[:controller] %>
<% end %>

<div id="pjax">
  <div id="wrapper" data-adminica-nav-top="1" data-adminica-side-top="1">
    <%= render "components/topbar" %>
    <%= render "components/sidebar" %>
    <%= render "components/stackbar" %>
  </div>
  
  <div id="main_container" class="main_container container_16 clearfix">
    <%= render "components/navigation" %>
    <div class="box grid_16 video-panel">
      <h2 class="box_head">
	<%= @current_video or "No Video" -%>
      </h2>
      <video controls="controls" width="720" height="360">
	<source src="https://s3.amazonaws.com/totalsem-videos/009+External+Connections.mp4" type="video/mp4" />
	<object type="application/x-shockwave-flash" data="http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf" width="720" height="360">
	  <param name="movie" value="http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf" />
	  <param name="allowFullScreen" value="true" />
	  <param name="wmode" value="transparent" />
	  <param name="flashVars" value="config={'playlist':[{'url':'https%3A%2F%2Fs3.amazonaws.com%2Ftotalsem-videos%2F009%2BExternal%2BConnections.mp4','autoPlay':false}]}" />
	  <span title="No video playback capabilities, please download the video below">External Connections</span>
	</object>
      </video>
      <!-- <p> -->
      <!-- 	<strong>Download video:</strong> <a href="https://s3.amazonaws.com/totalsem-videos/009+External+Connections.mp4">MP4 format</a> -->
      <!-- </p>     -->
    </div>
    <div class="box grid_8">
      <h2 class="box_head">Chapters</h2>
      <div class="controls">
	<a href="#" class="grabber"></a>
	<a href="#" class="toggle"></a>
      </div>
      <div class="toggle_container">
	<div class="block">
	  <div class="section">
	    <ol>
	      <% for chapter in @chapters %>
	      <li><a href="#" class="chapter_link"><%= chapter.name -%></a></li>
              <% end %>
	    </ol>
	  </div>
	</div>
      </div>
    </div>
    <div class="box grid_8">
      <h2 class="box_head">Episodes</h2>
      <div class="controls">
	<a href="#" class="grabber"></a>
	<a href="#" class="toggle"></a>
      </div>
      <div class="toggle_container">
	<div class="block">
	  <div class="section">
	    <% for chapter in @chapters %>
	    <ol class="episode_list" data-chapter="<%= chapter.name -%>">
	      <% for episode in chapter.episodes %>
	      <li><%= episode.name -%></li>
	      <% end %>
	    </ol>
	    <% end %>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
